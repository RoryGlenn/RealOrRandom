{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Streamlit Debug",
      "type": "python",
      "request": "launch",
      "program": "python",
      "args": [
        "-m", "streamlit", "run",
        "${file}",          // or the path to your app file: "streamlit_app.py"
        "--server.port=8501"
      ],
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
